# =============================================================================
# SPAC OS - Environment Variables Template
# =============================================================================
# Copy this file to .env.local for local development
# For production, configure these in your deployment platform (Vercel, etc.)
# =============================================================================

# =============================================================================
# DATABASE (Supabase PostgreSQL)
# =============================================================================
# Connection pooling URL (for Prisma Client connections)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:6543/postgres?pgbouncer=true

# Direct connection URL (for Prisma Migrations)
DIRECT_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Supabase client configuration
NEXT_PUBLIC_SUPABASE_URL=https://[PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =============================================================================
# AUTHENTICATION (Clerk)
# =============================================================================
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk route configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# =============================================================================
# AI SERVICES (Anthropic Claude)
# =============================================================================
# Get your API key from https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-...

# AI model configuration (optional)
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096

# =============================================================================
# EMAIL SERVICE (Resend)
# =============================================================================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_...

# Email configuration
EMAIL_FROM=noreply@spacos.app
EMAIL_REPLY_TO=support@spacos.app

# =============================================================================
# GOOGLE OAUTH (Gmail & Calendar Integration)
# =============================================================================
# Get these from https://console.cloud.google.com/apis/credentials
# Create an OAuth 2.0 Client ID (Web application type)
# See docs/GOOGLE_API_SETUP.md for detailed setup instructions
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# OAuth callback URLs (must match Google Cloud Console configuration)
GMAIL_REDIRECT_URI=http://localhost:3000/api/auth/gmail/callback
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# =============================================================================
# CALENDLY INTEGRATION (Optional)
# =============================================================================
# Get your Personal Access Token from https://calendly.com/integrations/api_webhooks
# CALENDLY_API_KEY=your-calendly-api-key

# =============================================================================
# CACHING / RATE LIMITING (Upstash Redis)
# =============================================================================
# Get these from https://console.upstash.com
UPSTASH_REDIS_REST_URL=https://[YOUR-REDIS].upstash.io
UPSTASH_REDIS_REST_TOKEN=AX...

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Public URL of your application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment (development, staging, production)
NODE_ENV=development

# App name and version
NEXT_PUBLIC_APP_NAME=SPAC OS
NEXT_PUBLIC_APP_VERSION=1.0.0

# =============================================================================
# STORAGE (Optional - for document uploads)
# =============================================================================
# Supabase Storage (uses same project as database)
STORAGE_BUCKET=documents

# OR use AWS S3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=spac-os-documents

# =============================================================================
# SEC EDGAR API (Optional - for filing data)
# =============================================================================
# User-Agent string for SEC EDGAR API (required by SEC)
SEC_EDGAR_USER_AGENT=SPAC-OS/1.0 (contact@example.com)

# =============================================================================
# WEBHOOKS (Optional)
# =============================================================================
# Secret for validating incoming webhooks
WEBHOOK_SECRET=whsec_...

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_DOCUMENT_ANALYSIS=true

# =============================================================================
# LOGGING & MONITORING (Optional)
# =============================================================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://...@sentry.io/...
# SENTRY_AUTH_TOKEN=

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limit window in seconds
RATE_LIMIT_WINDOW=60

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
# NextAuth secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Set to true to seed database on startup
SEED_DATABASE=false

# Enable debug mode
DEBUG=false
